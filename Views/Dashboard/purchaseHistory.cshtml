@model List<Assignment01.Controllers.DashboardController.TicketDataObject>

<!DOCTYPE html>

<html>
<head>
    <title>Purchase History</title>
</head>

<body>
<h1 class="text-center">Tickets</h1>
@if (Model != null && Model.Count > 0)
{
    <table class="table">
        <thead>
        <tr>
            <th>Purchase Date</th>
            <th>Event Title</th>
            <th>Event Date</th>
            <th>Quantity</th>
            <th>Total Cost</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var ticket in Model)
        {
            <tr>
                <td>@ticket.PurchaseDate.ToShortDateString()</td>
                <td>@ticket.EventTitle</td>
                <td>@ticket.EventDate.ToShortDateString()</td>
                <td>@ticket.Quantity</td>
                <td>@ticket.TotalCost</td>
                <td>
                    <button type="button" 
                            class="btn btn-sm btn-primary" 
                            data-bs-toggle="modal" 
                            data-bs-target="#ratingModal"
                            data-id="@ticket.PurchaseID">
                        Rate
                    </button>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>You have no tickets.</p>
}
<div class="modal fade" id="ratingModal" tabindex="-1" aria-labelledby="ratingModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="ratingModalLabel">Rate This Event</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                
                <form asp-action="SubmitRating" method="post">
                    <div class="modal-body">
                        <p>How was your experience?</p>
                        
                        <input type="hidden" name="purchaseId" id="ratingPurchaseId" />

                        <div class="mb-3">
                            <label for="ratingValue" class="form-label">Rating (1-5)</label>
                            <input type="number" 
                                   class="form-control" 
                                   id="ratingValue" 
                                   name="rating" 
                                   min="1" 
                                   max="5" 
                                   required 
                                   placeholder="Enter a number 1-5">
                            <div class="form-text">Please enter a whole number between 1 and 5.</div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Submit Rating</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

<script>
        document.addEventListener('DOMContentLoaded', function () {
            var ratingModal = document.getElementById('ratingModal');
            
            ratingModal.addEventListener('show.bs.modal', function (event) {
               
                var button = event.relatedTarget;
                
       
                var id = button.getAttribute('data-id');
                
                // 3. Update the hidden input field inside the form
                var modalInput = ratingModal.querySelector('#ratingPurchaseId');
                modalInput.value = id;
            });
        });
    </script>
</body>
</html>