@model List<TicketDataViewModel>

<h4 class="mb-4">Purchase History</h4>

@if (Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Purchase Date</th>
                <th>Event Title</th>
                <th>Event Date</th>
                <th>Quantity</th>
                <th>Total Cost</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var ticket in Model)
            {
                <tr>
                    <td>@ticket.PurchaseDate.ToShortDateString()</td>
                    <td>@ticket.EventTitle</td>
                    <td>@ticket.EventDate.ToShortDateString()</td>
                    <td>@ticket.Quantity</td>
                    <td>$@ticket.TotalCost.ToString("F2")</td>
                    <td>
                        <button type="button"
                                class="btn btn-sm btn-outline-light"
                                data-bs-toggle="modal"
                                data-bs-target="#ratingModal"
                                data-id="@ticket.PurchaseId">
                            Rate
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info">You have no purchase history.</div>
}

<!-- Rating Modal -->
<div class="modal fade" id="ratingModal" tabindex="-1" aria-labelledby="ratingModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="ratingModalLabel">Rate This Event</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="SubmitRating" method="post">
                <div class="modal-body">
                    <p>How was your experience?</p>
                    <input type="hidden" name="purchaseId" id="ratingPurchaseId" />
                    <div class="mb-3">
                        <label for="ratingValue" class="form-label">Rating (1-5)</label>
                        <input type="number"
                               class="form-control"
                               id="ratingValue"
                               name="rating"
                               min="1"
                               max="5"
                               required
                               placeholder="Enter a number 1-5">
                        <div class="form-text">Please enter a whole number between 1 and 5.</div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Submit Rating</button>
                </div>
            </form>
        </div>
    </div>
</div>
