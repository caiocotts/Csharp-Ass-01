<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Assignment 2</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Assignment01.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light custom-navbar">
            <div class="container-fluid">
                <a class="navbar-brand text-dark" asp-area="" asp-controller="Home" asp-action="Index">Assignment 2</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                    <ul class="navbar-nav  ms-auto">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>


                        @*@if (User.Identity!.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Manager"))) {} 
                    cant do this because they need to be able to see it but not access it.*@
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EventManager"
                                asp-action="ManageEvents">Manage Events</a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EventManager"
                                asp-action="Analytics">Analytics</a>
                        </li>



                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Tickets"
                               asp-action="TicketPurchasing">Ticket Purchasing</a>
                        </li>
                        
                       

                        @if (User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="dashboard"
                                   asp-action="dashboard">Dashboard</a>
                            </li>
                            
                            <li class="nav-item">
                                <span class="nav-link text-dark">
                                    @if (User.IsInRole("Admin"))
                                    {
                                        @:Role: Admin
                                    }
                                    else if (User.IsInRole("Organizer"))
                                    {
                                        @:Role: Organizer
                                    }
                                    else
                                    {
                                        @:Role: Default User
                                    }
                                </span>
                            </li>
                            <li class="nav-item">
                                <form class="d-inline" asp-area="Identity" asp-page="/Account/Logout"
                                    asp-route-returnUrl="@Url.Action("Index", "Home")" method="post">
                                    <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index">Profile</a>
                        }

                        <li class="nav-item">
                            <a class="nav-link text-dark position-relative" asp-controller="Cart" asp-action="Checkout"
                                title="Shopping Cart">
                                <i class="fa-solid fa-cart-arrow-down"></i>
                                <span id="cart-badge"
                                    class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
                                    style="display: none;">
                                    0
                                </span>
                            </a>
                        </li>

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-0 mb-0">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2025 - Group 41: O'Neal Jean, Keagan Cameron, Caio cotts Assignment 2- <a asp-area=""
                asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Update cart badge on page load
        $(document).ready(function () {
            $.get('@Url.Action("GetCartCount", "Cart")', function (data) {
                var badge = $('#cart-badge');
                if (data.count > 0) {
                    badge.text(data.count).show();
                } else {
                    badge.hide();
                }
            });
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>