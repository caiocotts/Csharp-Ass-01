@model List<Event>

@{
    ViewData["Title"] = "Personal Event Management";
}

<h2>Manage Events</h2>
<br/>
<a asp-action="Create" class="btn btn-primary">Create New Event</a>
@if (Model.Any())
{
    <table class="table">
        <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>Category</th>
            <th>Event Date</th>
            <th>Price per Ticket</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var e in Model)
        {
            <tr>
                <td>@e.Id</td>
                <td>@e.Title</td>
                <td>@e.Category</td>
                <td>@e.EventDate</td>
                <td>@e.PricePerTicket</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <p>No events available.</p>
}